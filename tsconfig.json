{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "src",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"]
    },
    "outDir": "dist",
    "types": ["@types/node"]
  },
  "exclude": ["node_modules", "dist"]
}
